#!/bin/bash

chmod a+rwx /src/*

/src/./cek_root

k="Selamat datang di menu instalasi kvka."
echo -n "$k" | pv -qL 10

read -p "Apakah Anda ingin menginstal kvka [Y/n] : " n
if [ "$n" == "Y" ] || [ "$n" == "y" ]; then
    /src/./cek_koneksi_internet
elif [ "$n" == "N" ] || [ "$n" == "n" ]; then
    exit 0
else
    echo "[x] Masukan tidak valid."
    exit 1
fi
