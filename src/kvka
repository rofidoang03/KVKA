#!/bin/bash

clear

k_1="Selamat datang di kvka"
k_2="kvka adalah skrip Bash sederhana yang dibuat untuk mengonversi file video menjadi file audio menggunakan FFmpeg."

echo -n "$k_1" | pv -qL 10
echo -e "\n"
echo -n "$k_2" | pv -qL 10
echo -e "\n"

read -p "Masukkan nama file video : " v

if [ -e "$v" ]; then
    read -p "Masukkan nama file audio : " a
    echo -e "\n[*] Melakukan konversi..."
    ffmpeg -i "${v}" -vn -acodec libmp3lame "${a}" >> /dev/null 2>&1
    mv "${a}" /usr/share/kvka/hasil_konversi
    echo "[+] Konversi selesai."
    echo "[+] Hasil konversi disimpan di folder '/usr/share/kvka/hasil_konversi'."
    exit 0

else
    echo "[x] File '$v' tidak ditemukan."
    exit 1
fi
